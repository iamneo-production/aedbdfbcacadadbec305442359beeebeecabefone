@model IEnumerable<BookStoreApp.Models.Enquiry>

@{
    ViewData["Title"] = "Index";
}

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Enquiry Id</th>
                <th>Enquiry Date</th>
                <th>Kid Name</th>
                <th>Parents Name</th>
                <th>Email ID</th>
                <th>ContactNumber</th>
                <th>CourseName</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Enquiry enquiry in Model)
            {
                <tr>
                    <td>@enquiry.EnquiryID</td>
                    <td>@enquiry.EnquiryDate.Date.ToString("dd-MM-yyyy")</td>
                    <td>@enquiry.KidName</td>
                    <td>@enquiry.ParentsName</td>
                    <td>@enquiry.EmailID</td>
                    <td>@enquiry.ContactNumber</td>
                    <td>@enquiry.CourseName</td>
                    <td>
                        <form asp-action="Delete" asp-route-id="@enquiry.EnquiryID" method="post">
                            <button type="submit" class="btn btn-sm btn-danger">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No Enquiry found.</p>
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">